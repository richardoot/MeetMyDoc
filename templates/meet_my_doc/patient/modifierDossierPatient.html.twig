{% extends 'base.html.twig' %}

{% block title %} MeetMyDoc - Inscription {% endblock %}

{% block body %}

<div class="row">
    <div class="col col-xs-10 col-sm-10 col-md-8 col-lg-6 offset-xs-1 offset-sm-1 offset-md-2 offset-lg-3">
        <div class="cadreForm" style="margin-top: 1rem; border: solid 1px; border-radius: 3px; border-color: #BDBDBD; padding: 1rem;">
            <h1>Veuillez vous inscrire</h1>

            <form method="post">
                <div class="form-group">

                  <!--fieldset-->

                  {{form_start(formulaire)}}
                    <div class="col col-4">
                      {{form_row(formulaire.groupeSanguin)}}
                    {{form_row(formulaire.allergies)}}
                    {{form_row(formulaire.maladiesGraves)}}
                    {{form_row(formulaire.vaccins)}}
                  </div>
                    {#{form_row(formulaire.sexe)}#}

                  <!--/fieldset-->

                  <button class="btn btn-primary" type="submit" style="margin-top: 1rem;">Valider</button>

                  {{form_end(formulaire)}}
                </div>
            </form>
        </div> <!-- FORM GROUP -->
    </div> <!-- CADRE DU FORM -->
</div> <!--ROW-->

{% endblock %}
{% block footer %}{% endblock %}

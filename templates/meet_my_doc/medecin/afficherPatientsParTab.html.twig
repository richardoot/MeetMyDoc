<div class="row">
            <div class="col col-xs-12 col-sm-12 col-md-10 col-lg-6 col-xl-6 offset-md-1 offset-lg-3 offset-xl-3">
            {% for patient in patients %}
                <div class="card">
                    <div class="card-body">
                        <fieldset>
                            <h4> {{ patient.nom }} {{ patient.prenom }}</h4>
                        </fieldset>
                        <p>{{ patient.adresse }}</p>
                        <p>{{ patient.codePostal }} {{ patient.ville }}</p>
                        <a class="btn btn-primary" href="">Voir profil</a>
                        {# <a class="btn btn-primary" href="{{ path('meet_my_doc_patient_afficher_creneaux', {'email': medecin.email, 'debut': 0}) }}">Prendre RDV</a></div> #}

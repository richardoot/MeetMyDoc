{% extends 'base.html.twig' %}

{% block title %} MeetMyDoc - Login {% endblock %}

{% block body %}


      <div class="row">
        <div class="col col-xs-10 col-sm-10 col-md-8 col-lg-6 offset-xs-1 offset-sm-1 offset-md-2 offset-lg-3">
        <div class="cadreForm" style="margin-top: 1rem; border: solid 1px; border-radius: 3px; border-color: #BDBDBD; padding: 1rem;background-color:white;">
        <h1>Veuillez vous connecter</h1>
          <form method="post">
              {% if error %}
                  <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
                  </div>
              {% endif %}
              <div class="form-group">

              <fieldset>

                <label for="inputEmail">Email*</label>

                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus></br>

                <label for="inputPassword">Mot de passe*</label>

                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required><br>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <p class="obligationChamps">Les champs suivis d'un * sont obligatoires</p>

              </fieldset>
              {#
                  Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                  See https://symfony.com/doc/current/security/remember_me.html
              #}
                {#  <div class="checkbox mb-3">
                      <label>
                          <input type="checkbox" name="_remember_me"> Se souvenir de moi
                      </label>
                  </div>#}
                      <input type="checkbox"><label class="rememberME">Se souvenir de moi</label><br>


              <button class="btn btn-primary" type="submit" style="margin: 0px;">Connexion</button>
              </div>
              </form>
              </div> <!-- FORM GROUP -->
              </div> <!-- CADRE DU FORM -->
        </div> <!--ROW-->

{% endblock %}

{% block footer %}{% endblock %}
